<!DOCTYPE html>
<html>

<head>
    <title>Add New Product</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>

<body>
    <nav>
        <div class="nav-wrapper blue">
            <a href="/users/dashboard" class="brand-logo">Add Product</a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li><a href="/product">Product List</a></li>
                <li><a href="/users/dashboard">Dashboard</a></li>
                <li><a href="/users/logout">Logout</a></li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col s12 m8 offset-m2">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">Add New Product</span>
                        <form action="/product/add" method="POST" enctype="multipart/form-data">
                            <div class="input-field">
                                <input id="name" name="name" type="text" class="validate" required>
                                <label for="name">Product Name</label>
                            </div>

                            <div class="input-field">
                                <input id="price" name="price" type="number" step="0.01" class="validate" required>
                                <label for="price">Price ($)</label>
                            </div>

                            <div class="file-field input-field">
                                <div class="btn blue">
                                    <span><i class="material-icons left">image</i>Upload Image</span>
                                    <input type="file" name="image" accept="image/*">
                                </div>
                                <div class="file-path-wrapper">
                                    <input class="file-path validate" type="text" placeholder="Upload product image">
                                </div>
                            </div>

                            <div class="input-field">
                                <input id="imageUrl" name="imageUrl" type="url" class="validate">
                                <label for="imageUrl">Or enter Image URL</label>
                                <span class="helper-text">You can either upload an image or provide a URL</span>
                            </div>

                            <div class="input-field">
                                <select id="category" name="category" required>
                                    <option value="" disabled selected>Choose category</option>
                                    {{#each categoryList}}
                                    <option value="{{this._id}}">{{this.name}}</option>
                                    {{/each}}
                                </select>
                                <label>Category</label>
                            </div>

                            <div class="input-field">
                                <textarea id="description" name="description" class="materialize-textarea"></textarea>
                                <label for="description">Description</label>
                            </div>

                            <div class="card-action">
                                <button class="btn waves-effect waves-light green" type="submit">
                                    <i class="material-icons left">save</i>Add Product
                                </button>
                                <a href="/product" class="btn grey">
                                    <i class="material-icons left">cancel</i>Cancel
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var elems = document.querySelectorAll('select');
            var instances = M.FormSelect.init(elems);

            // Debug form submission
            const form = document.querySelector('form');
            form.addEventListener('submit', function (e) {
                console.log('Form submitting...');
                console.log('Name:', document.getElementById('name').value);
                console.log('Price:', document.getElementById('price').value);
                console.log('Category:', document.getElementById('category').value);
                console.log('Description:', document.getElementById('description').value);
                console.log('ImageUrl:', document.getElementById('imageUrl').value);

                const fileInput = document.querySelector('input[type="file"]');
                if (fileInput.files.length > 0) {
                    console.log('File selected:', fileInput.files[0].name);
                } else {
                    console.log('No file selected');
                }
            });
        });
    </script>
</body>

</html>