<!DOCTYPE html>
<html>

<head>
    <title>Edit Product</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>

<body>
    <nav>
        <div class="nav-wrapper blue">
            <a href="/users/dashboard" class="brand-logo">Edit Product</a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li><a href="/product">Product List</a></li>
                <li><a href="/users/dashboard">Dashboard</a></li>
                <li><a href="/users/logout">Logout</a></li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col s12 m8 offset-m2">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">Edit Product</span>
                        <form action="/product/edit/{{product._id}}" method="POST" enctype="multipart/form-data">
                            <div class="input-field">
                                <input id="name" name="name" type="text" class="validate" value="{{product.name}}"
                                    required>
                                <label for="name" class="active">Product Name</label>
                            </div>

                            <div class="input-field">
                                <input id="price" name="price" type="number" step="0.01" class="validate"
                                    value="{{product.price}}" required>
                                <label for="price" class="active">Price ($)</label>
                            </div>

                            {{#if product.image}}
                            <div class="center-align" style="margin: 20px 0;">
                                <p><strong>Current Image:</strong></p>
                                <img src="{{product.image}}" alt="{{product.name}}" class="responsive-img"
                                    style="max-width: 200px; max-height: 200px;">
                            </div>
                            {{/if}}

                            <div class="file-field input-field">
                                <div class="btn blue">
                                    <span><i class="material-icons left">image</i>Change Image</span>
                                    <input type="file" name="image" accept="image/*">
                                </div>
                                <div class="file-path-wrapper">
                                    <input class="file-path validate" type="text" placeholder="Upload new image">
                                </div>
                            </div>

                            <div class="input-field">
                                <input id="imageUrl" name="imageUrl" type="url" class="validate"
                                    value="{{product.image}}">
                                <label for="imageUrl" class="active">Or enter Image URL</label>
                                <span class="helper-text">Leave empty to keep current image</span>
                            </div>

                            <div class="input-field">
                                <select id="category" name="category" required>
                                    {{#each categoryList}}
                                    <option value="{{this._id}}" {{#if (eq this._id
                                        ../product.category._id)}}selected{{/if}}>{{this.name}}</option>
                                    {{/each}}
                                </select>
                                <label>Category</label>
                            </div>

                            <div class="input-field">
                                <textarea id="description" name="description"
                                    class="materialize-textarea">{{product.description}}</textarea>
                                <label for="description" class="active">Description</label>
                            </div>

                            <div class="card-action">
                                <button class="btn waves-effect waves-light blue" type="submit">
                                    <i class="material-icons left">save</i>Update Product
                                </button>
                                <a href="/product" class="btn grey">
                                    <i class="material-icons left">cancel</i>Cancel
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var elems = document.querySelectorAll('select');
            var instances = M.FormSelect.init(elems);
        });
    </script>
</body>

</html>