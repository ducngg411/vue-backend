<!DOCTYPE html>
<html>

<head>
    <title>Product List</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>

<body>
    <nav>
        <div class="nav-wrapper blue">
            <a href="/users/dashboard" class="brand-logo">Product Management</a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li><a href="/users/dashboard">Dashboard</a></li>
                <li><a href="/users/logout">Logout</a></li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col s12">
                <h4>Product List</h4>
                {{#if isAdmin}}
                <a href="/product/add" class="btn green">
                    <i class="material-icons left">add</i>Add Product
                </a>
                {{/if}}
            </div>
        </div>

        <!-- Search and Filter Form -->
        <div class="row">
            <form method="GET" action="/product">
                <div class="col s12 m4">
                    <div class="input-field">
                        <input id="search" name="search" type="text" value="{{search}}">
                        <label for="search">Search products...</label>
                    </div>
                </div>

                <div class="col s12 m3">
                    <div class="input-field">
                        <select name="category">
                            <option value="" {{#unless selectedCategory}}selected{{/unless}}>All Categories</option>
                            {{#each categoryList}}
                            <option value="{{_id}}" {{#if (eq ../selectedCategory _id)}}selected{{/if}}>{{name}}
                            </option>
                            {{/each}}
                        </select>
                        <label>Category</label>
                    </div>
                </div>

                <div class="col s12 m2">
                    <div class="input-field">
                        <select name="sortBy">
                            <option value="name" {{#if (eq sortBy 'name' )}}selected{{/if}}>Name</option>
                            <option value="price" {{#if (eq sortBy 'price' )}}selected{{/if}}>Price</option>
                            <option value="createdAt" {{#if (eq sortBy 'createdAt' )}}selected{{/if}}>Date</option>
                        </select>
                        <label>Sort By</label>
                    </div>
                </div>

                <div class="col s12 m2">
                    <div class="input-field">
                        <select name="sortOrder">
                            <option value="asc" {{#if (eq sortOrder 'asc' )}}selected{{/if}}>Ascending</option>
                            <option value="desc" {{#if (eq sortOrder 'desc' )}}selected{{/if}}>Descending</option>
                        </select>
                        <label>Order</label>
                    </div>
                </div>

                <div class="col s12 m1">
                    <button class="btn blue" type="submit" style="margin-top: 20px;">
                        <i class="material-icons">search</i>
                    </button>
                </div>
            </form>
        </div>

        <!-- Products Table -->
        <div class="row">
            <div class="col s12">
                {{#if productList}}
                {{#if productList.length}}
                <table class="striped highlight responsive-table">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Category</th>
                            <th>Description</th>
                            {{#if isAdmin}}
                            <th>Actions</th>
                            {{/if}}
                        </tr>
                    </thead>
                    <tbody>
                        {{#each productList}}
                        <tr>
                            <td>
                                {{#if image}}
                                <img src="{{image}}" alt="{{name}}" class="responsive-img"
                                    style="max-width: 80px; max-height: 80px;">
                                {{else}}
                                <span class="grey-text">No image</span>
                                {{/if}}
                            </td>
                            <td>{{name}}</td>
                            <td>${{price}}</td>
                            <td>{{#if category}}{{category.name}}{{else}}N/A{{/if}}</td>
                            <td>{{description}}</td>
                            {{#if ../isAdmin}}
                            <td>
                                <a href="/product/edit/{{_id}}" class="btn small blue">
                                    <i class="material-icons">edit</i>
                                </a>
                                <a href="/product/delete/{{_id}}" class="btn small red"
                                    onclick="return confirm('Are you sure?')">
                                    <i class="material-icons">delete</i>
                                </a>
                            </td>
                            {{/if}}
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                {{else}}
                <div class="center-align">
                    <h5>No products found</h5>
                    <p class="grey-text">{{#if search}}Try adjusting your search criteria{{else}}No products
                        available. Click "Add Product" to create one.{{/if}}</p>
                </div>
                {{/if}}
                {{else}}
                <div class="center-align">
                    <h5>Error loading products</h5>
                    <p class="grey-text">Please try refreshing the page</p>
                </div>
                {{/if}}
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var elems = document.querySelectorAll('select');
            var instances = M.FormSelect.init(elems);

            // Check for success message in URL
            const urlParams = new URLSearchParams(window.location.search);
            const success = urlParams.get('success');

            if (success === 'added') {
                M.toast({ html: 'Product added successfully!', classes: 'green' });
            } else if (success === 'updated') {
                M.toast({ html: 'Product updated successfully!', classes: 'blue' });
            } else if (success === 'deleted') {
                M.toast({ html: 'Product deleted successfully!', classes: 'orange' });
            }
        });
    </script>
</body>

</html>